.main-page
  position relative
  height 100%

/*main-famili*/
.main-familiarization
  width 100%
  background url('../img/home/bg.png') no-repeat center center
  background-size cover
  z-index 3

  &__wrapper
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content space-around
    text-align center

  &__form-title
    color #fff
    font-size 16px
    font-weight 300

  &__form-email,
  &__form-button
    padding 18px 0
    width 200px
    border none
    outline none
    position relative

  &__form-email
    border-radius 30px 0 0 30px
    padding-left 8px
    left 3px

  &__form-email::-webkit-input-placeholder
    text-align center
    text-indent 0
    transition text-indent .3s ease
  &__form-email::-moz-placeholder
    text-align center
    text-indent 0
    transition text-indent .3s ease
  &__form-email:-moz-placeholder
    text-align center
    text-indent 0
    transition text-indent .3s ease
  &__form-email:-ms-input-placeholder
    text-align center
    text-indent 0
    transition text-indent .3s ease
  &__form-email:focus::-webkit-input-placeholder
    text-indent 200px
  &__form-email:focus::-moz-placeholder
    text-indent 200px
  &__form-email:focus:-moz-placeholder
    text-indent 200px
  &__form-email:focus:-ms-input-placeholder
    text-indent 200px

  &__form-button
    border-radius 0 30px 30px 0
    right 3px
    color #fff
    background-color #cc3333
    font-weight bold
    cursor pointer
    transition all .3s ease

    &:hover
      background-color #e8e1e1
      color #cc3333

/*media queries main-famili*/
.main-familiarization
  +below(420px)
    &__logo
      img
        width 90%
    &__form-title
      font-size 15px
      span
        display none
    &__form-email,
    &__form-button
      width 45%
      font-size 12px
      padding 16px
