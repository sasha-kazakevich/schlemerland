.page-home-second
  width 100%
  height 100%
  background url('../img/home/bg2.png') no-repeat center center
  background-size cover
  position absolute
  font-family "GothamProMedium"
  font-size 24px

  &__wrapper
    // padding 90px 15%
    // width 420px
    width 100%
    height 100%
    margin 0 auto
    text-align center
    display flex
    flex-direction column
    justify-content space-around

  &__qualities
    padding 0
    margin 0 auto
    width 80%
    list-style none
    +below(1020px)
      width 100%

  &__quality
    display inline-block
    width 30%
    color #fff
    text-align center

  &__images
    width 75px
    height 75px
    margin 0 auto
    background url('../img/home/quality-sprite.png') no-repeat center center
    background-size cover

  &__images--freshness
    background-position 10px -5px

  &__images--qual
    background-position -64px -5px

  &__images--price
    background-position -138px -5px

  &__text
    display block
    margin-top 40px

  &__learn-more
    width 400px
    display block
    margin 0 auto
    border none
    outline none
    border-radius 30px
    background-color #cc3333
    font-size 16px
    color #fff
    cursor pointer
    transition all .2s ease-in-out

    .hidden,
    .visible
      display block
      padding 18px 0

    .hidden
      display none

    &:hover
      background-color #fff

      .hidden
        display block
        text-decoration none
        width 100%
        height 100%
        color #cc3333
      .visible
        display none


.page-home-second
  +below(420px)
    &__qualities
      margin-top 50px
    &__quality
      display block
      width 70%
      margin 0 auto
      margin-bottom 40px

    .clearfix::after
        content ""
        display table
        clear both

    &__images
      float left
      width 60px
      height 60px
      // background-size 100%

    &__images--freshness
      background-position 8px 0px

    &__images--qual
      background-position -48px -5px

    &__images--price
      background-position -106px 0px

    &__text
      font-size 16px
      margin-top 0
      padding-top 18px

    &__learn-more
      width 90%
