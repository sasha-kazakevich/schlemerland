html,
body
  font-family "GothamProLight"
  font-size 16px
  height 100%
  background #e8e8e8

*
  box-sizing border-box


::-webkit-scrollbar { width: 3px; height: 3px;}

::-webkit-scrollbar-button {  background-color: red; display:none; }

::-webkit-scrollbar-track {  background-color: #999;}

::-webkit-scrollbar-track-piece { background-color: #ffffff;}

::-webkit-scrollbar-thumb { height: 10px; background-color: #cc3333; border-radius: 10px;}

::-webkit-scrollbar-corner { background-color: #999;}

::-webkit-resizer { background-color: #666;}


.main-wrapper
  height 100%
  position relative
  // overflow-y scroll

.content
  margin-right 100px
  position relative
  width 100%
  height 100%
  overflow auto
  transition margin-right .4s ease

  +below(1024px)
    margin-right 0

.main-navigation
  width 100px
  float right
  transition width .4s ease
  &:hover
    width 300px

    + .content
        margin-right 300px

.main-navigation
  +below(1024px)
      &:hover
        width 0
        + .content
            margin-right 0

#pp-nav
  display none