/*button-burger*/
.main-navigation__toggle
    position absolute
    display none
    width 36px
    height 36px
    right 10px
    top 14px
    cursor pointer
    z-index 120

.main-navigation--closed
  .main-navigation__toggle::before
    content ''
    position absolute
    top 8px
    width 30px
    height 4px

    background-color #a11717
    box-shadow 0 10px 0 0 #a11717,
                0 20px 0 0 #a11717

.main-navigation--opened
  .main-navigation__toggle
    top 22px

    &:before,
    &:after
      content ''
      position absolute
      top 10px
      width 30px
      height 4px

      background-color #a11717

    &:before
      transform rotate(45deg)
      box-shadow none

    &:after
      transform rotate(-45deg)
  .main-nav
    width 250px
    // &:hover
    //   border 1px solid black

/*main-menu*/
.main-nav
  width 100px
  height 100%
  position fixed
  right 0
  z-index 100
  background-color #fff
  transition width .4s ease

  &__wrapper
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content space-around

  &__list
    padding 0
    margin 0
    list-style none
    overflow hidden

  &__item
    font-size 18px
    position relative
    transition all .2s ease

    &:hover
      background-color #cc3333
      &:before
        background url('../img/menu/home-w.svg') no-repeat center center
      a
        color #fff

    &:before
      content ''
      width 35px
      height 35px
      display inline-block
      position absolute
      top 30px
      left 30px
      transition left .4s ease
      background url('../img/menu/home-r.svg') no-repeat center center

    a
      position relative
      display block
      width 100%
      z-index 1
      padding 40px
      padding-left 120px
      color #000
      transition color .1s ease
      text-decoration none

  &__item--home
    &:hover
      &:before
        background url('../img/menu/home-w.svg') no-repeat center center
    &:before
      background url('../img/menu/home-r.svg') no-repeat center center

  &__item--menu
    &:hover
      &:before
        background url('../img/menu/menu-w.svg') no-repeat center center
    &:before
      background url('../img/menu/menu-r.svg') no-repeat center center

  &__item--about
    &:hover
      &:before
        background url('../img/menu/about-w.svg') no-repeat center center
    &:before
      background url('../img/menu/about-r.svg') no-repeat center center

  &__item--clients
    &:hover
      &:before
        background url('../img/menu/client-w.svg') no-repeat center center
    &:before
      background url('../img/menu/client-r.svg') no-repeat center center

  &__item--contacts
    margin-bottom 0
    &:hover
      &:before
        background url('../img/menu/cont-w.svg') no-repeat center center
    &:before
      background url('../img/menu/cont-r.svg') no-repeat center center

  &__social
    display block
    width 30px
    margin 0 auto
    font 0/0 serif

    &:before
      content ''
      display inline-block
      width 30px
      height 30px

  &__social--fb
    &:before
      background url('../img/menu/facebook.png') no-repeat center center

/*media queries main-menu*/

.main-navigation__toggle
  +below(1024px)
    display block

.main-nav
  +above(1025px)
    &:hover
      width 300px
  +below(1024px)
    width 0px
    &__wrapper
     display block
    &__top
      height 50px
    &__item
      margin-bottom 0px
      &:before
        top 13px
      a
        padding 23px
        padding-left 120px
    &__social
      margin 15px auto
