.about-info
  color #fff
  height 100%
  
  &__wrapper
    display flex
    overflow hidden
    height 100%
    
  &__left
    width calc(100% - 400px)
    background url('../img/about/info/bg1.png') no-repeat center center
    background-size cover
    position relative
    min-height 100%
    transition all .4s ease-in-out 
    
  &__right
    width 400px
    min-height 100%
    background-color #e8e8e8
    padding 25px

  &__title
    font-family "GothamProMedium"
    font-size 24px
    color #cc3333
    font-weight 300
    text-align center

  &__text
    font-size 14px
    color #000
    padding-top 33px
    margin 0
    
  &__text--nospace
    padding-top 0
  &__title--space
    margin-top 38px
    
+below(730px)
  .about-info
    &__left
      display none
    &__right
      width 100%
      background url('../img/about/info/bg1.png') no-repeat center center
      background-size cover
    &__title
      color #fff
    &__text
      color #fff
      
+below(560px)
  .about-info
    &__title
      font-size 18px
      margin 0
      margin-top 24px
    &__text
      padding-top 10px
      span 
        display none
    &__text--nospace
      padding-top 0