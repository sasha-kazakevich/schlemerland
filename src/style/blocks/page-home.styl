.page-home
  background url('../img/home/bg.png') no-repeat center center
  background-size cover
  width 100%
  height 100%
  position absolute
  z-index 3

  &__wrapper
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content space-around
    text-align center
  &__logo
    // padding 45px 0

  &__form
    // margin 40px 0
    // margin-bottom 20%

  &__form-title
    color #fff

  &__form-email,
  &__form-button
    padding 18px 0
    width 200px
    border none
    outline none
    position relative

  &__form-email
    border-radius 30px 0 0 30px
    padding-left 8px
    // position relative
    left 3px

  &__form-email::-webkit-input-placeholder
    text-align center
    text-indent 0
    transition text-indent .3s ease
  &__form-email::-moz-placeholder
    text-align center
    text-indent 0
    transition text-indent .3s ease
  &__form-email:-moz-placeholder
    text-align center
    text-indent 0
    transition text-indent .3s ease
  &__form-email:-ms-input-placeholder
    text-align center
    text-indent 0
    transition text-indent .3s ease
  &__form-email:focus::-webkit-input-placeholder
    text-indent 200px
  &__form-email:focus::-moz-placeholder
    text-indent 200px
  &__form-email:focus:-moz-placeholder
    text-indent 200px
  &__form-email:focus:-ms-input-placeholder
    text-indent 200px

  &__form-button
    border-radius 0 30px 30px 0
    right 3px
    color #fff
    background-color #cc3333
    font-weight bold

.page-home
  +below(420px)
    &__logo
      img
        width 90%
    &__form-title
      font-size 15px
      span
        display none
    &__form-email,
    &__form-button
      width 45%
      font-size 12px
      padding 16px
