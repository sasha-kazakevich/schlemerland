.about-range
	height 100%
	overflow hidden
	background url('../img/about/range/r2.png') no-repeat
	background-size 100%

	&__wrapper
		height 100%
		margin-top 30px
		
	&__left
		width 50%
		min-height 100%

	&__title
		font-size 18px
		font-family "GothamProMedium"
		font-weight 300
		
	&__text
		font-size 12px
		line-height 16px
		
+below(1024px)
	.about-range
		display none