.contacts-page
  display flex
  height 100%
  font-size 18px

.contacts-info
  background #fff
  width 50%
  padding 130px 5% 130px 40px

  &__secret
    display none
    margin 0
    font-size 22px
    font-weight 300

  &__infotext
    min-height 100px
    width 100%

  &__icons
    margin-top 25px

  &__icon
    font-size 18px
    margin 0
    margin-bottom 30px

    &:before
      content ''
      display inline-block
      position relative
      top 15px
      width 50px
      height 50px
      margin-right 30px
      transition margin-right .3s ease

  &__icon--email
    &:before
      background url('../img/contacts/mail.png') no-repeat center center

  &__icon--number
    &:before
      background url('../img/contacts/mob.png') no-repeat center center

.contacts-form
  width 50%
  background-color #e8e8e8
  text-align center

  &__name
    margin 35px
    font-size 24px
    font-weight normal


  // &__form
  //   margin-top 50px

  &__input,
  &__button
    width 90%
    padding 17px 20px 21px 20px
    margin-bottom 30px
    border none
    outline none
    border-radius 30px

  &__input::-webkit-input-placeholder
    text-indent 60px
    transition all .3s ease
  &__input::-moz-placeholder
    padding-left 60px
    transition all .3s ease
  &__input:-moz-placeholder
    padding-left 60px
    transition all .3s ease
  &__input:-ms-input-placeholder
    text-indent 60px
    transition all .3s ease
  &__input:focus::-webkit-input-placeholder
    text-indent 300px
    opacity 0
  &__input:focus::-moz-placeholder
    text-indent 300px
    opacity 0
  &__input:focus:-moz-placeholder
    text-indent 300px
    opacity 0
  &__input:focus:-ms-input-placeholder
    text-indent 300px
    opacity 0

  &__input--textarea
    resize none
    overflow hidden

  &__button
    width 60%
    font-family "GothamProMedium"
    background-color #cc3333
    color #fff
    cursor pointer
    transition all .3s ease

    &:hover
      background-color #fff
      color #cc3333


+below(760px)
  .contacts-page
    display block
  .contacts-info,
  .contacts-form
    width 100%
  .contacts-info
    padding 65px
    &__icon
      font-size 16px

+below(420px)
  .contacts-info
    padding 25px 18px
    &__secret
      display block
      font-family "GothamProMedium"
      font-size 18px
      color #000
      font-weight 300
    &__icons
      margin-left 0
    &__infotext
      min-height 0
      font-size 16px
  .contacts-form
    &__name
      font-family "GothamProMedium"
      font-size 18px
      color #000
      font-weight 300
    &__input,
    &__button
