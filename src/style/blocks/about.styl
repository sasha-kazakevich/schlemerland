.about-page
  position relative
  height 100%

.about
  width 100%
  height 100%
  background #e8e8e8

  &__wrapper
    position relative
    min-height 100%
    padding 45px 50px
    overflow hidden

  &__title
    margin 0
    font-size 30px
    font-weight 300

  &__button
    position relative
    bottom 30px
    width 300px
    border-radius 30px
    padding 17px 0
    text-align center
    color #cc3333
    background #fff
    float right
    cursor pointer

    font-family "GothamProMedium"
    font-size 18px

    &:hover
      color #fff
      background #cc3333

  &__accord,
  &__slider
    clear both

  &__down
    height 100px
    margin-top -100px
    position relative
