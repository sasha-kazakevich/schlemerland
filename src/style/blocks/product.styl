.product
  &__wrapper
    padding 50px
    padding-bottom 0

  &__title
    margin 0
    margin-bottom 45px
    font-size 30px
    font-weight 300

  &__text
    font-size 18px
    margin 0
    margin-bottom 45px

  &__button-wrap
    text-align right

  &__button
    display inline-block
    position relative
    width 340px
    padding 14px 20px
    margin-bottom 30px
    border-radius 30px
    font-size 18px
    background #fff
    color #cc3333
    cursor pointer
    font-family "GothamProMedium"
    text-align center
    text-decoration none
    transition all .2s ease-in-out

    &:hover
      background #cc3333
      color #fff


.ingredient
  width 100%
  display flex
  justify-content space-between
  align-items flex-start
  margin-bottom 40px
  min-height 110px
  &__image
    display inline

  &__info
    width 85%

  &__name
    padding 0
    margin 0
    font-size 24px

  &__text
    font-size 18px

.product-card
  display flex
  width 100%
  margin-bottom 35px
  // height 100%

  &__picture
    width 40%

  &__info-block
    width 60%
    background #fff

  &__wraper
    padding 45px

  &__title
    margin 0
    font-size 1.7vw
    font-weight 300

  &__text
    font-size 1.4vw
    margin 5% 0 10% 0

.product-table
  width 100%
  font-family "GothamProMedium"
  line-height .8
  border-spacing 0 20px
  &__table-title
    font-size 1.6vw
  &__table-price
    font-size 1.8vw
    color #cc3333
    vertical-align top
    text-align right
  span
    font-family "GothamProLight"
    font-size 12px
    color #000
  br
    margin 0

.product-footer
  display flex
  justify-content space-between

+below(970px)
  .product
    &__button-wrap
      text-align center
  .ingredient
    display block
    &__image
      display block
      margin 0 auto
    &__info
      width 100%
  .product-card
    display block
    width 50%
    margin 0 auto
    margin-bottom 30px

    &__picture
      width 100%
    &__info-block
      width 100%
      position relative
      top -3px
    &__wraper
      padding 30px
    &__title
      font-size 20px
    &__text
      font-size 16px
  .product-table
    &__table-title
      font-size 16px
    &__table-price
      font-size 18px
  .product-footer
    display block
    text-align center
+below(860px)
  .product-card
    width 70%

+below(645px)
  .product
    &__wrapper
      padding 13px
    &__title
      margin-bottom 24px
  .product-card
    width 90%
    &__wraper
      padding 10px
    &__text
      font-size 10px
  .product-table
    &__table-title
      font-size 12px
    span
      font-size 8px
    &__table-price
      font-size 18px

+below(420px)
  .product
    &__title
      font-size 18px
      font-family "GothamProMedium"
      font-weight 300
    &__text
      font-size 14px
    &__button
      width 280px
    &__center
      text-align center
  .ingredient
    &__image
      margin-bottom 20px
    &__name
      font-size 18px
      font-family "GothamProMedium"
      font-weight 300
    &__text
      display none
