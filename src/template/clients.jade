mixin receive(receiv,dev,imgdec,infdec)
  section.wrapper(class=dev)
    img.wrapper__image(src= receiv.image class= imgdec)
    div.wrapper__info(class= infdec)
      h1.wrapper__name= receiv.name
      p.wrapper__text= receiv.text


section.clients.animated.slideInRight
  section.clients-receive
    h1.clients-receive__title Наши клиенты получают
    div.main-wrapper
      for reciev in receive
        +receive(reciev,"decor","img-decor","info-dec")
  section.client-benefits
    h1.clients-receive__title Преимущества
    div.main-wrapper
      for benefi in benefits
        +receive(benefi)
  div.client-button
    a.client-button__menu(href="/menu") Посмотреть меню
      
